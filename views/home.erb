<!doctype html>
<html>
  <head>
    <title>JS Quiz Game</title>
    <link rel= "stylesheet" href= "global.css">
  </head>
  <body>
    <div id= "quiz">
      <div id= "question1">
        <h3><%= @q1.question %></h3>
        <ul>
          <% @c1.each do |choice| %>
          <li><%=@c1.choice%></li>
          <% end %>
        </ul>
        <input id= "question1_answer" type= "text"></input>
        <input id= "question1_submit" type= "submit"></input>
        <button id="next_button1" type="button">Next</button>
      </div>
      
      <div id= "question2">
        <h3><%= @q2.question %></h3>
        <ul>
          <% @c2.each do |choice| %>
          <li><%=@c2.choice%></li>
          <% end %>
        </ul>
        <input id= "question2_answer" type= "text"></input>
        <input id= "question2_submit" type= "submit"></input>
        <button id="next_button2" type="button">Next</button>
      </div>
      
      <div id= "question3">
       <h3><%= @q3.question %></h3>
       <ul>
         <% @c3.each do |choice| %>
         <li><%=@c3.choice%></li>
         <% end %>
       </ul>
        <input id= "question3_answer" type= "text"></input>
        <input id= "question3_submit" type= "submit"></input>
        <button id="next_button3" type="button">Next</button>
      </div>
    
      <div id= "question4">
       <h3><%= @q4.question %></h3>
       <ul>
         <% @c4.each do |choice| %>
         <li><%=@c4.choice%></li>
         <% end %>
       </ul>
        <input id= "question4_answer" type= "text"></input>
        <input id= "question4_submit" type= "submit"></input>
        <button id="show_score" type="button">Score</button>
      </div>
    </div>
    
    <div id="answer_section">
        <p class="hide" id="success">Success!</p>
        <p class="hide" id="fail">FAIL!</p>
    </div>
        
    <div id= "total_result">
        
    </div>
    
    <script src="global.js"></script>
  </body>
</html>